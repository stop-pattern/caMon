<Page x:Class="caMon.pages.TIS.notch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:caMon.pages.TIS"
      mc:Ignorable="d" 
      Title="notch">
    <Page.Resources>
        <SolidColorBrush x:Key="cR" Color="Red"/>
        <SolidColorBrush x:Key="cY" Color="Orange"/>
        <SolidColorBrush x:Key="cG" Color="SkyBlue"/>
        <SolidColorBrush x:Key="cN" Color="LimeGreen"/>
        <SolidColorBrush x:Key="cW" Color="White"/>
        <SolidColorBrush x:Key="cB" Color="Black"/>
        <Style TargetType="Border" >
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2.5"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="local:CustomIndicator">
            <Setter Property="Foreground" Value="{StaticResource cW}"/>
            <!--
            <Setter Property="color_text" Value="{StaticResource cB}"/>
            <Setter Property="status" Value="True"/>
            -->
        </Style>
        <Style x:Key="Warning" TargetType="local:CustomIndicator">
            <Setter Property="Background" Value="{StaticResource cR}"/>
        </Style>
        <Style x:Key="Caution" TargetType="local:CustomIndicator">
            <Setter Property="Background" Value="{StaticResource cY}"/>
        </Style>
        <Style x:Key="Available" TargetType="local:CustomIndicator">
            <Setter Property="Background" Value="{StaticResource cG}"/>
        </Style>
        <Style x:Key="Notice" TargetType="local:CustomIndicator">
            <Setter Property="Background" Value="{StaticResource cN}"/>
        </Style>
    </Page.Resources>

    <Viewbox>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="750">
            <Border>
                <local:CustomIndicator x:Name="ind_off" status="True" text="OFF" Background="{StaticResource cR}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_e" status="True" text="EB" Background="{StaticResource cR}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b8" status="True" text="B8" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b7" status="True" text="B7" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b6" status="True" text="B6" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b5" status="True" text="B5" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b4" status="True" text="B4" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b3" status="True" text="B3" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b2" status="True" text="B2" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_b1" status="True" text="B1" Background="{StaticResource cY}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_n" status="True" text="N" Background="{StaticResource cN}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_p1" status="True" text="P1" Background="{StaticResource cG}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_p2" status="True" text="P2" Background="{StaticResource cG}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_p3" status="True" text="P3" Background="{StaticResource cG}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_p4" status="True" text="P4" Background="{StaticResource cG}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
            <Border>
                <local:CustomIndicator x:Name="ind_p5" status="True" text="P5" Background="{StaticResource cG}" color_text="{StaticResource cB}" Foreground="{StaticResource cW}"/>
            </Border>
        </StackPanel>
    </Viewbox>
</Page>
