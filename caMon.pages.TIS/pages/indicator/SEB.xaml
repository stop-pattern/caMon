<Page x:Class="caMon.pages.TIS.pages.indicator.SEB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:caMon.pages.TIS.pages.indicator"
      xmlns:custom="clr-namespace:caMon.pages.TIS"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="640"
      Title="SEB">
    <Page.Resources>
        <Style TargetType="custom:CustomIndicator">
            <Setter Property="OnBrush" Value="Orange"/>
        </Style>
    </Page.Resources>

    <Grid Background="Black" Height="380" Width="640">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1.75*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <!--#region ハンドル -->
        <Viewbox Stretch="Fill" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
            <Frame Source="../../notch.xaml"/>
        </Viewbox>
        <!--#endregion-->

        <!--#region 列選 -->
        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="1.4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center" StretchDirection="UpOnly" Grid.Row="0" Grid.Column="1">
                        <TextBlock x:Name="trainKind" Foreground="Red" TextAlignment="Center">
                            種　別
                        </TextBlock>
                    </Viewbox>

                    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center" StretchDirection="UpOnly" Grid.Row="1" Grid.Column="1">
                        <TextBlock x:Name="trainDestination" Foreground="Red" TextAlignment="Center">
                            行　先
                        </TextBlock>
                    </Viewbox>

                    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center" StretchDirection="UpOnly" Grid.Row="2" Grid.Column="1">
                        <TextBlock x:Name="trainNumber" Foreground="Red" TextAlignment="Center">
                            列　番
                        </TextBlock>
                    </Viewbox>
                </Grid>
            </Border>
            
            <Border BorderBrush="White" BorderThickness="2" Grid.Row="1">
                <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center" StretchDirection="UpOnly">
                    <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center">
                    列情
                    </TextBlock>
                </Viewbox>
            </Border>

            <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center" StretchDirection="UpOnly" Grid.Row="4">
                <Label VerticalAlignment="Center">
                    <TextBlock FontSize="12" Foreground="LimeGreen" TextAlignment="Center">
                    通信中
                    </TextBlock>
                </Label>
            </Viewbox>
            <Viewbox  Grid.Row="4" Grid.Column="1">
                <Ellipse Stroke="OrangeRed" Fill="Transparent" StrokeThickness="1"/>
            </Viewbox>

            <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center" StretchDirection="UpOnly" Grid.Row="5">
                <Label VerticalAlignment="Center">
                    <TextBlock FontSize="12" Foreground="LimeGreen" TextAlignment="Center">
                    照　合
                    </TextBlock>
                </Label>
            </Viewbox>
            <Viewbox  Grid.Row="5" Grid.Column="1">
                <Ellipse Stroke="LimeGreen" Fill="LimeGreen" StrokeThickness="1"/>
            </Viewbox>
        </Grid>
        <!--#endregion-->

        <!--#region FD -->
        <Grid Grid.Column="3" Grid.Row="3">
            <custom:CustomIndicator x:Name="PlatformDoorGreen" Status="False" Text="ホームドア" OnBrush="LimeGreen" OffBrush="LimeGreen" TextBrush="Black" Margin="0,15"/>
            <custom:CustomIndicator x:Name="PlatformDoorWhite" Visibility="Hidden" Status="False" Text="ホームドア" OffBrush="White" Margin="0,15"/>
        </Grid>
        <!--#endregion-->

        <!--#region 左上 -->
        <Grid Grid.Column="5" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <custom:CustomIndicator x:Name="AtsNormal" Text="ＡＴＳ正常" Grid.Row="0"/>
            <custom:CustomIndicator x:Name="Braking" Text="動　作" Grid.Row="1"/>
            <custom:CustomIndicator x:Name="Stop" Text="停　車" Grid.Row="2"/>
            <custom:CustomIndicator x:Name="Failure" Text="故　障" Grid.Row="3"/>
            <custom:CustomIndicator x:Name="SpeedLimit" Text="速　制" Grid.Row="4"/>
            <custom:CustomIndicator x:Name="Confirm" Text="確　認" Grid.Row="5"/>
            <custom:CustomIndicator x:Name="EmerBrake" Text="非常ﾌﾞﾚｰｷ" OnBrush="Red" TextBrush="White" Grid.Row="6"/>
        </Grid>
        <!--#endregion-->

        <!--#region 中上 -->
        <Grid Grid.Column="7" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <custom:CustomIndicator x:Name="AtcService" Text="ＡＴＣ常用" Grid.Row="0"/>
            <custom:CustomIndicator x:Name="AtcEmergency" Text="ＡＴＣ非常" Grid.Row="1"/>
            <custom:CustomIndicator x:Name="EmrDrive" Text="非常運転" Grid.Row="2"/>
            <custom:CustomIndicator x:Name="Atc" Text="ＡＴＣ" Grid.Row="3"/>
            <custom:CustomIndicator x:Name="Inside" Text="構　内" Grid.Row="4"/>
            <custom:CustomIndicator x:Name="NotInstitutionalized" Text="非　設" Grid.Row="5"/>
            <custom:CustomIndicator x:Name="nazo" Text="制御開放" Visibility="Collapsed" Grid.Row="6"/>
        </Grid>
        <!--#endregion-->

        <!--#region 右上 -->
        <Grid Grid.Column="9" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <custom:CustomIndicator x:Name="PlatformDoorInterlocking" Text="ﾎｰﾑﾄﾞｱ連動" OnBrush="LimeGreen" Grid.Row="0"/>
            <custom:CustomIndicator x:Name="PlatformDoorNotInterlocking" Text="ﾎｰﾑﾄﾞｱ非連動" Grid.Row="1"/>
            <custom:CustomIndicator Text="ｽﾃｯﾌﾟ支障" Grid.Row="2"/>
            <custom:CustomIndicator Text="ﾎｰﾑﾄﾞｱ支障" Grid.Row="3"/>
            <custom:CustomIndicator Text="起動試験" Grid.Row="5"/>
        </Grid>
        <!--#endregion-->

        <!--#region 左下 -->
        <Grid Grid.Column="5" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <custom:CustomIndicator x:Name="CrimpingBrake" Text="圧着ﾌﾞﾚｰｷ" Grid.Row="0"/>
            <custom:CustomIndicator x:Name="NonRegenerative" Text="回生開放" Grid.Row="1"/>
            <custom:CustomIndicator x:Name="HighBeam" Text="ハイビーム" Grid.Row="2"/>
        </Grid>
        <!--#endregion-->

        <!--#region 中下 -->
        <Grid Grid.Column="7" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <custom:CustomIndicator x:Name="Tasc" Text="ＴＡＳＣ" Grid.Row="0"/>
            <custom:CustomIndicator x:Name="TascControl" Text="ＴＡＳＣ制御" Grid.Row="1"/>
        </Grid>
        <!--#endregion-->

        <!--#region 右下 -->
        <Grid Grid.Column="9" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <custom:CustomIndicator Text="情報伝送故障" Grid.Row="0"/>
            <custom:CustomIndicator Text="ＴＩＳ試験" Grid.Row="1"/>
        </Grid>
        <!--#endregion-->

    </Grid>
</Page>
