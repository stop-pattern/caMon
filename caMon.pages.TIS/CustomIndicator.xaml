<UserControl x:Class="caMon.pages.TIS.CustomIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:caMon.pages.TIS"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="true">
            <Setter Property="Border.Background" Value="{Binding }"/>
            <Setter Property="Border.BorderThickness" Value="0,0"/>
            <Setter Property="TextBlock.Foreground" Value="Black"/>
        </Style>
        <Style x:Key="false">
            <Setter Property="Border.Background" Value="{Binding }"/>
            <Setter Property="Border.BorderThickness" Value="5,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Width="300" Height="100" Background="Black">
        <Border x:Name="back" Padding="0">
            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" StretchDirection="DownOnly">
                <TextBlock x:Name="front" FontSize="75" TextAlignment="Center"/>
                <!-- Style="{StaticResource true}" -->
            </Viewbox>
        </Border>
    </Grid>
</UserControl>
