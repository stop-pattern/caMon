<Page x:Class="caMon.pages.TIS.TIS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:caMon.pages.TIS"
      mc:Ignorable="d" 
      Title="TIS">

    <Viewbox>
        <Grid Background="Black" Height="1200" Width="1600">
            <Grid x:Name="displayTop" Margin="0,0" Height="100" VerticalAlignment="Top">
                <Rectangle Height="100" VerticalAlignment="Top" Fill="DodgerBlue" />
                <Label Content="◆ 表示灯 ◆" FontSize="75" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ToggleButton x:Name="Smooth" Content="Smooth" Height="50" Width="50" Margin="0,0,100,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Button Click="NextP" Content="Back" Height="50" Width="50" Margin="0,0,50,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
            <Grid x:Name="displayBottom" Margin="0,0" Height="100" VerticalAlignment="Bottom">
                <Rectangle Height="100" VerticalAlignment="Bottom" Fill="Cyan" />
            </Grid>
            <Grid x:Name="G" Margin="0, 100, 0, 100" Height="1000" Width="1600" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid x:Name="Step" Margin="50, 200, 1400, 50" Height="650" Width="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Rectangle x:Name="R_EB" Grid.Row="1" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B7" Grid.Row="2" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B6" Grid.Row="3" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B5" Grid.Row="4" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B4" Grid.Row="5" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B3" Grid.Row="6" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B2" Grid.Row="7" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_B1" Grid.Row="8" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_N0" Grid.Row="9" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_P1" Grid.Row="10" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_P2" Grid.Row="11" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_P3" Grid.Row="12" Stroke="White" StrokeThickness="2"/>
                    <Rectangle x:Name="R_P4" Grid.Row="13" Stroke="White" StrokeThickness="2"/>

                    <Label x:Name="L_EB" Content="EB" FontSize="40" Foreground="White" Grid.Row="0" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B7" Content="B7" FontSize="40" Foreground="White" Grid.Row="1" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B6" Content="B6" FontSize="40" Foreground="White" Grid.Row="2" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B5" Content="B5" FontSize="40" Foreground="White" Grid.Row="3" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B4" Content="B4" FontSize="40" Foreground="White" Grid.Row="4" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B3" Content="B3" FontSize="40" Foreground="White" Grid.Row="5" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B2" Content="B2" FontSize="40" Foreground="White" Grid.Row="6" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_B1" Content="B1" FontSize="40" Foreground="White" Grid.Row="7" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_N0" Content="N" FontSize="40" Foreground="White" Grid.Row="8" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_P1" Content="P1" FontSize="40" Foreground="White" Grid.Row="9" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_P2" Content="P2" FontSize="40" Foreground="White" Grid.Row="10" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_P3" Content="P3" FontSize="40" Foreground="White" Grid.Row="11" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="L_P4" Content="P4" FontSize="40" Foreground="White" Grid.Row="12" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid x:Name="TKK" Margin="0, 100, 0, 100" Height="1000" Width="1600" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="東急" FontSize="30" Foreground="Black" Background="DarkOrange"
                       Height="50" Width="75" HorizontalAlignment="Right" VerticalAlignment="Top"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
            <Grid x:Name="TRTA" Margin="0, 100, 0, 100" Height="1000" Width="1600" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="地下鉄" FontSize="20" Foreground="Black" Background="DarkOrange"
                       Height="50" Width="75" HorizontalAlignment="Right" VerticalAlignment="Top"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
            <Grid x:Name="SEB" Margin="0, 100, 0, 100" Height="1000" Width="1600" HorizontalAlignment="Center" VerticalAlignment="Center">

            </Grid>
            <Grid x:Name="TOB" Margin="0, 100, 0, 100" Height="1000" Width="1600" HorizontalAlignment="Center" VerticalAlignment="Center">

            </Grid>
        </Grid>
    </Viewbox>
</Page>
