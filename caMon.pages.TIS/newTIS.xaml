<Page x:Class="caMon.pages.TIS.newTIS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:caMon.pages.TIS"
      xmlns:CustomControls="clr-namespace:caMon.pages.TIS.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="newTIS">

    <Grid Background="#FF4F4F4F">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="4.5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <!--#region 路線情報 -->
        <!--#endregion-->

        <!--#region ページタイトル -->
        <Border Background="ForestGreen" Grid.Row="1">
            <Viewbox>
                <TextBlock Text="◇　運　転　情　報　◇" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Viewbox>
        </Border>
        <!--#endregion-->

        <!--#region 種別・鍵 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" Grid.Column="0">
                <Viewbox>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="種　別" Foreground="Black"/>
                </Viewbox>
            </Border>

            <Border Grid.Column="2">
                <Border.Background>
                    <SolidColorBrush Color="#FF0078D7"/>
                </Border.Background>
                <Viewbox>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="鍵種別" Foreground="White"/>
                </Viewbox>
            </Border>
        </Grid>
        <!--#endregion-->

        <!--#region ページ選択 -->
        <Grid Grid.Row="5" Background="SlateGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>


        <!--#endregion-->

    </Grid>
</Page>
